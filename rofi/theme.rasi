/*Tema creado por Jorge Garcia para Staidcat*/

* {
	black1:#0C1018;
	black2:#111722;
	black3:#161D2C;
	black4:#1B2436;
	black5:#202B41;
	black6:#25324B;
	pink:#FA3C82;
	blue:#3CFAB4;
	green:#3CFA55;
	orange:#FAB43C;
	red:#FA553C;
	foreground:#E4E4E4;
	background-color: @black1;
	font: "Hack Nerd Font Mono 10";
	text-color: @foreground;
}
window {
	//location: south;
	width: 40%;
	height: 400px;
	y-offset: -38px;
	border: 1px;
	border-color: @black6;
	border-radius: 2px;
}
mainbox {
	margin: 0px;
}
inputbar {
	margin: 16px 16px 0px 16px;		
}
prompt {
	enabled: false;
	padding: 8px;
	background-color: @blue;
	text-color: @black1;
	border-radius: 2px;
}
entry {
	margin: 8px 0px;
	border-radius: 2px;
	vertical-align: 0.5;
	//background-color: @black3;
	//text-color: @black6;
}
listview {
	columns: 2;
	lines: 6;
	margin: 8px 16px 0px 16px;
}
element {
	padding: 4px;
	margin: 4px 0px;
}
element selected {
	background-color: @orange;
	border-radius: 2px;
}
element-text,element-icon {
	background-color: inherit;
}
element-icon {
	size: 40px;
}
element-text {
	vertical-align: 0.5;
}
element-text selected {
	text-color: @black1;
}
mode-switcher {
	spacing: 0;
}
button {
	font: "Hack Nerd Font Mono 16";
	padding: 8px;
	background-color: @black3;
	text-color: @black1;
}
button selected {
	background-color: @black1;
	text-color: @foreground;
}
